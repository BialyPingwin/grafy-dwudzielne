<Page x:Class="ProjektGrafy.Pages.NewGraphPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjektGrafy.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewGraphPage">

    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="273*"/>
            <ColumnDefinition Width="273*"/>
            <ColumnDefinition Width="255*"/>
        </Grid.ColumnDefinitions>

        <Canvas x:Name="LineCanvas" HorizontalAlignment="Left" Height="440" VerticalAlignment="Top" Width="545" Grid.ColumnSpan="2"/>
        <Button x:Name="Button_AddLeft" Content="Dodaj wierzchołek" VerticalAlignment="Top" Margin="60,38,60,0" Height="50" Click="Button_AddLeft_Click" FontSize="16"/>
        <Button x:Name="Button_AddRight" Content="Dodaj wierzchołek" VerticalAlignment="Top" Margin="60,39,60,0" Height="49" Click="Button_AddRight_Click" Grid.Column="1" FontSize="16"/>
        <Grid x:Name="LeftGrid" Margin="60,92,60,10"/>
        <Grid x:Name="RightGrid" Margin="62,93,60,10" Grid.Column="1"/>
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="10,36,0,0" TextWrapping="Wrap" Text="Aktualnie wybrany wierzchołek:" VerticalAlignment="Top" Width="168" Height="28" FontSize="18"/>
        <TextBlock x:Name="ActualVertex_Info" Grid.Column="2" HorizontalAlignment="Left" Margin="183,36,0,0" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Top" Width="44" Height="28" FlowDirection="RightToLeft" FontSize="20" Background="White"/>
        <DataGrid x:Name="ConnectionsTable" Grid.Column="2" Height="119" Margin="29,68,27,0" VerticalAlignment="Top" ColumnWidth="*" CanUserResizeColumns="False"  CanUserReorderColumns="False" IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Połączone z" Binding="{Binding idNumber}" Foreground="Black" FontSize="16" />
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="AddConnection_Button" Content="Dodaj połączenie" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Grid.Column="2" Margin="29,193,27,0" Height="46" Click="AddConnection_Button_Click" FontSize="20"/>
        <Button x:Name="Save_Button" Content="Zapisz graf" Grid.Column="2" Margin="0,0,28,23" HorizontalAlignment="Right" Width="198" Height="55" VerticalAlignment="Bottom" FontSize="20" Click="Save_Button_Click"/>
        <Button x:Name="Back_Button" Content="Cofnij" Margin="10,0,197,10" Height="35" VerticalAlignment="Bottom" FontSize="20" Click="Back_Button_Click" />

    </Grid>

</Page>
