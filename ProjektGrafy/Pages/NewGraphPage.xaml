<Page x:Class="ProjektGrafy.Pages.NewGraphPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjektGrafy.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewGraphPage">

    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="109*"/>
            <ColumnDefinition Width="51*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="Button_AddLeft" Content="Dodaj wierzchołek" VerticalAlignment="Top" Margin="89,38,0,0" Height="50" Click="Button_AddLeft_Click" HorizontalAlignment="Left" Width="124"/>
        <Button x:Name="Button_AddRight" Content="Dodaj wierzchołek" VerticalAlignment="Top" Margin="0,39,86,0" Height="49" Click="Button_AddRight_Click" HorizontalAlignment="Right" Width="124"/>
        <Grid x:Name="LeftGrid" Margin="89,92,0,10" HorizontalAlignment="Left" Width="124"/>
        <Grid x:Name="RightGrid" Margin="0,93,86,10" HorizontalAlignment="Right" Width="124"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="10,36,0,0" TextWrapping="Wrap" Text="Aktualnie wybrany wierzchołek:" VerticalAlignment="Top" Width="168" Height="28"/>
        <TextBlock x:Name="ActualVertex_Info" Grid.Column="1" HorizontalAlignment="Left" Margin="183,36,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="44" Height="28" FlowDirection="RightToLeft"/>
        <DataGrid x:Name="ConnectionsTable" Grid.Column="1" Height="119" Margin="29,68,27,0" VerticalAlignment="Top" ColumnWidth="*" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Połączone z" Binding="{Binding idNumber}" Foreground="Black" FontSize="16" />
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="AddConnection_Button" Content="Dodaj połączenie" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Grid.Column="1" Margin="29,193,27,0" Height="46" Click="AddConnection_Button_Click" FontSize="20"/>

    </Grid>

</Page>
