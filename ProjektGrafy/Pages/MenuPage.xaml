      xmlns:local="clr-namespace:ProjektGrafy.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="27*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="New_Button" Content="Nowy graf" Margin="43,40,41,0" FontSize="20" Click="New_Button_Click" Height="58" VerticalAlignment="Top"/>
        <Button x:Name="LoadAndCheckButton" Margin="43,103,41,0" FontSize="20" Click="LoadAndCheckButton_Click" Height="136" VerticalAlignment="Top">
