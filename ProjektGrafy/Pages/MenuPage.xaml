<Page x:Class="ProjektGrafy.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjektGrafy.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="27*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="New_Button" Margin="120,143,455,0" FontSize="24" Click="New_Button_Click" Height="195" VerticalAlignment="Top" Background="#ffc300" Grid.ColumnSpan="2">
            <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="Utwórz nowy graf" TextAlignment="Center" FontSize="30" Foreground="White"/>
        </Button>
        <Button x:Name="LoadAndCheckButton" Margin="194,143,120,0" FontSize="20" Click="LoadAndCheckButton_Click" Height="195" VerticalAlignment="Top" Background="#ffc300" Grid.Column="1">
            <TextBlock Text="Wczytaj graf i sprawdź czy jest zupełny" TextWrapping="Wrap" TextAlignment="Center" FontSize="30" Foreground="White"/>
        </Button>

    </Grid>
</Page>
